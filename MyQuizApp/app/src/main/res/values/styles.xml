<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:checkboxStyle">@style/multipleAnswerStyle</item>
        <item name="android:radioButtonStyle">@style/oneAnswerStyle</item>
        <item name="android:textViewStyle">@style/questionsTextviews</item>
        <item name="android:buttonStyle">@style/submitButtons</item>
    </style>

    <style name="multipleAnswerStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:paddingLeft">@dimen/checkbox_paddingLeft</item>
        <item name="android:layout_marginTop">@dimen/checkbox_marginTop</item>
        <item name="android:textSize">@dimen/answer_textsize</item>
        <item name="android:textColor">@color/colorCheckboxText</item>
    </style>


    <style name="oneAnswerStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:paddingLeft">@dimen/checkbox_paddingLeft</item>
        <item name="android:layout_marginTop">@dimen/checkbox_marginTop</item>
        <item name="android:textSize">@dimen/answer_textsize</item>
        <item name="android:textColor">@color/colorCheckboxText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="images">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="questionsTextviews" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorQuestionText</item>
        <item name="android:textSize">@dimen/question_textsize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/question_margin</item>

    </style>

    <style name="submitButtons" parent="@android:style/Widget.Button">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:text">@string/submit</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>

</resources>
